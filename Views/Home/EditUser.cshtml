@model APPLE_STORE.Models.TaiKhoan

@{
    ViewBag.Title = "Chỉnh sửa người dùng";
}

<h2>Chỉnh sửa người dùng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.IdTaiKhoan)
    <!-- ⚡ Hidden field cực kỳ quan trọng để EF biết id user nào đang sửa -->

    <div class="form-group">
        @Html.LabelFor(m => m.TenTaiKhoan)
        @Html.EditorFor(m => m.TenTaiKhoan)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MatKhau)
        @Html.EditorFor(m => m.MatKhau)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.EditorFor(m => m.Email)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.HoTen)
        @Html.EditorFor(m => m.HoTen)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DiaChi)
        @Html.EditorFor(m => m.DiaChi)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SoDienThoai)
        @Html.EditorFor(m => m.SoDienThoai)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.VaiTro)
        @Html.EditorFor(m => m.VaiTro)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.XacThucEmail)
        @Html.EditorFor(m => m.XacThucEmail)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TrangThai)
        @Html.EditorFor(m => m.TrangThai)
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
}
